{{!
    @template block_openbook/main

    This template renders the main content area for the openbook block.

    Example context (json):
    {
            "openbooklink": "Access is granted to the Openbook resource folder 1 Openbook resource folder containing these files:",
            "ownfilestitle": "Own files",
            "teacherfilestitle": " Teacher files",
            "sharedfilestitle": "Shared files"
    }
}}

<div id="block-openbook-{{uniqid}}" class="block-openbook block-cards mb-3" data-region="openbook" role="navigation">
    {{{openbooklink}}}
</div>
{{#ownfilestitle}}
<h4 class="h6 card-title">{{ownfilestitle}}</h4>
{{/ownfilestitle}}
{{#teacherfilestitle}}
    <h4 class="h6 card-title">{{teacherfilestitle}}</h4>
{{/teacherfilestitle}}
{{#sharedfilestitle}}
    <h4 class="h6 card-title">{{sharedfilestitle}}</h4>
{{/sharedfilestitle}}
